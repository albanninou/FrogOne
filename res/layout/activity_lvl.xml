<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lvl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.albanninou.gameone.LvlActivity">


    <Button
        android:text="Recommencez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/recommencez" />

    <Button
        android:text="Annulez le dernier coup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recommencez"
        android:layout_alignParentEnd="true"
        android:id="@+id/annuler" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mid"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp" />

    <TextView
        android:text="lvl 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recommencez"
        android:layout_alignStart="@+id/mid"
        android:layout_marginBottom="51dp"
        android:id="@+id/textlvl" />

    <TextView
        android:text="Vous avez gagnÃ©"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:id="@+id/win"
        android:layout_below="@+id/mid"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
